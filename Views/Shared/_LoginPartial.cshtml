@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="container-fluid" style="white-space:nowrap;" >
    <ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    
         <li class="nav-item ">
                 <a  class="nav-link text-light me-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"></a>
         </li>
         <li class="nav-item align-items-center d-flex">
        
            
              <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button class="btn"><span class="text-danger" data-feather="log-out"></span></button>
        </form>
           
          </li>
   
}
else
{
    
        <li class="nav-item">
                <!-- <a class="nav-link text-warning fw-bold" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>-->
        </li>
        <li class="nav-item">
                <a class="nav-link text-warning fw-bold" asp-area="Identity" asp-page="/Account/Login"></a>
        </li>
    
    
}
</ul>

</div>