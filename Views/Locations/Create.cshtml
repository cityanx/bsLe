@model bs.Models.Location

@{
    ViewData["Title"] = "Añadir Lugar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

<h3 class="mt-4">Añadir agencia</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="DepartamentName" class="control-label m-1"></label>
                <input asp-for="DepartamentName" class="form-control" />
                <span asp-validation-for="DepartamentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="TownName" class="control-label m-1"></label>
                <input asp-for="TownName" class="form-control" />
                <span asp-validation-for="TownName" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Locations" class="control-label m-1"></label>
                    <input asp-for="Locations" class="form-control" aria-describedby="locationsHelp" />
                    <div id="locationsHelp" class="form-text">
                            Pueblo, ciudad o barrio donde esté ubicada la agencia, y que funcione como identificador de la misma.
                    </div>
                <span asp-validation-for="Locations" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <input type="submit" value="Añadir" class="btn btn-success m-1" />
                    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
