@model bs.Models.Uninterruptible

@{
    ViewData["Title"] = "Añadir UPS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3 class="mt-4">Añadir UPS</h3>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="UpsName" class="control-label m-1"></label>
                <input asp-for="UpsName" class="form-control" />
                <span asp-validation-for="UpsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpsModel" class="control-label m-1"></label>
                <input asp-for="UpsModel" class="form-control" />
                <span asp-validation-for="UpsModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpsPower" class="control-label m-1"></label>
                <input asp-for="UpsPower" class="form-control" />
                <span asp-validation-for="UpsPower" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check m-3">
                    
                        <label asp-for="UpsManageable" class="control-label"></label>
                        <input asp-for="UpsManageable" class="form-check-input" />
                        <span asp-validation-for="UpsManageable" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UpsModules" class="control-label m-1"></label>
                <input asp-for="UpsModules" class="form-control" />
                <span asp-validation-for="UpsModules" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpsBatteries" class="control-label m-1"></label>
                <input asp-for="UpsBatteries" class="form-control" />
                <span asp-validation-for="UpsBatteries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgencyId" class="control-label m-1"></label>
                <select asp-for="AgencyId" class="form-select" asp-items="ViewBag.AgencyId"></select>
            </div>
                <div class="form-group m-1">
                    <input type="submit" value="Añadir" class="btn btn-success m-1" />
                    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                </div>
        </form>
    </div>
</div>


    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
