@model bs.Models.Uninterruptible

@{
    ViewData["Title"] = "Eliminar UPS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3 class="mt-4">Eliminar UPS</h3>
    <h6 class="mt-4 text-danger">¿Está seguro que quiere eliminar este registro?</h6>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Agency)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Agency.AgencyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpsName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpsName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpsModel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpsModel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpsPower)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpsPower)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpsManageable)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpsManageable)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpsIpAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpsIpAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpsModules)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpsModules)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpsBatteries)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpsBatteries)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UpsId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-dark">Cancelar</a>
        </form>
    </div>
</div>