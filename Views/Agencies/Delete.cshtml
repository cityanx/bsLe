@model bs.Models.Agency

@{
    ViewData["Title"] = "Eliminar agencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3 class="mt-4">Eliminar agencia</h3>
    <h6 class="mt-4 text-danger">¿Está seguro que quiere eliminar este registro?</h6>
    <hr />
    <div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location.DepartamentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgencyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgencyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgencyType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgencyType)
        </dd>
    </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AgencyId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-dark">Cancelar</a>
        </form>
</div>
</div>