@model bs.Models.Agency

@{
    ViewData["Title"] = "Añadir Agencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3 class="mt-4">Añadir agencia</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-7">

                    <label asp-for="LocationId" class="control-label m-1"></label>
                    <select asp-for="LocationId" class="form-select" asp-items="ViewBag.LocationId"></select>
                </div>

                <div class="row mb-1 mt-3">

                    <label asp-for="AgencyId" class="col-sm-5 col-form-label m-1"></label>
                    <div class="col-sm-3 mt-1">
                        <input asp-for="AgencyId" class="form-control" inputmode="numeric" />
                        <span asp-validation-for="AgencyId" class="text-danger"></span>
                    </div>
                    
                </div>

                

                <div class="form-group col-md-7">
                    <label asp-for="AgencyName" class="control-label m-1"></label>
                    <input asp-for="AgencyName" class="form-control" />
                    <span asp-validation-for="AgencyName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <fieldset>
                        <label asp-for="AgencyType" class="control-labe m-1"></label>
                        <select asp-for="AgencyType" name="AgencyType" class="form-select">

                            <option selected="selected" value="Agencia">Agencia</option>

                            <option value="Sucursal">Sucursal</option>

                            <option value="Ventanilla">Ventanilla</option>

                            <option value="ATM">Cajero Automático</option>

                            <option value="Otro">Otro</option>

                        </select>
                    </fieldset>

                    <span asp-validation-for="AgencyType" class="text-danger"></span>
                </div>
                <div class="form-group m-1 p-3">
                    <input type="submit" value="Añadir" class="btn btn-success m-1" />
                    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
